<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.contacts">

    <application
        android:name="com.example.contacts.app.App"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/icon_list"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_list"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.contacts.presentation.view.InfoActivity" />
        <activity android:name="com.example.contacts.presentation.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>