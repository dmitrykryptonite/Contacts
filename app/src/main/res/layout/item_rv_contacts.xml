<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="5dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tvNameContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/btnCallContact"
            android:layout_toLeftOf="@+id/btnCallContact"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="PAPAYEE" />

        <ImageButton
            android:id="@+id/btnCallContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/btnInfoContact"
            android:layout_toLeftOf="@+id/btnInfoContact"
            android:background="@android:color/white"
            android:contentDescription="@string/image_call_contact"
            android:src="@drawable/ic_call_green" />

        <ImageButton
            android:id="@+id/btnInfoContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_toStartOf="@+id/btnDeleteContact"
            android:layout_toLeftOf="@+id/btnDeleteContact"
            android:background="@android:color/white"
            android:contentDescription="@string/image_info_contact"
            android:src="@drawable/ic_info_bue" />

        <ImageButton
            android:id="@+id/btnDeleteContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:background="@android:color/white"
            android:contentDescription="@string/image_delete_contact"
            android:src="@drawable/ic_delete_red" />

    </RelativeLayout>
</RelativeLayout>